rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public registration request uploads (no auth required)
    match /requests/{allPaths=**} {
      // Anyone can read request images
      allow read: if true;
      
      // Anyone can upload to requests folder (for registration)
      allow write: if request.resource.size < 5 * 1024 * 1024 // 5MB max
        && request.resource.contentType.matches('image/.*');
    }
    
    // Approved advertiser images (auth required for write)
    match /advertisers/{allPaths=**} {
      // Anyone can read advertiser images
      allow read: if true;
      
      // Only authenticated admin can upload
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024 // 5MB max
        && request.resource.contentType.matches('image/.*');
    }
  }
}
